{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/chat-simple.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/chat-simple",
      "dest": "/api/chat-simple.py"
    },
    {
      "src": "/api/export/figma",
      "dest": "/api/chat-simple.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}